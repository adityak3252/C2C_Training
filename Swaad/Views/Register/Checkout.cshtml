@model CheckoutViewModel 
<div style="padding-top:80px">
    <h2>Here's Your Shopping Cart!</h2>
    <h3>Great selection of Food Items!</h3>
    <h3>Thanks for registering with us!</h3>
    <h4>@ViewBag.CheckoutMsg</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>FoodItem</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.shoppingCartItems)
            {
                <tr>
                    <td class="text-left">
                        @item.FoodItem.FoodName
                    </td>
                    <td class="text-right">
                        ₹ @item.FoodItem.Price
                    </td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-right">₹ @(item.Quantity * item.FoodItem.Price)</td>
                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    ₹ @Model.shoppingCartTotal
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <a class="btn btn-dark text-white" asp-controller="FoodItem" asp-action="Index">Go Back to Main Menu</a>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
